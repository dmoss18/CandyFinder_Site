<div class="topPadding textCenter">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div style="padding-top: 5px;"><div><%= f.label :email %></div>
  <%= f.email_field :email %></div>

  <div style="padding-top: 5px;"><div><%= f.label :first_name %></div>
  <%= f.text_field :first_name %></div>

  <div style="padding-top: 5px;"><div><%= f.label :last_name %></div>
  <%= f.text_field :last_name %></div>

  <div style="padding-top: 5px;"><div><%= f.label :username %></div>
  <%= f.text_field :username %></div>

  <div style="padding-top: 5px;"><div><%= f.label :password %></div>
  <%= f.password_field :password %></div>

  <div style="padding-top: 5px;"><div><%= f.label :password_confirmation %></div>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>
<br />
<%= render "links" %>

</div>
